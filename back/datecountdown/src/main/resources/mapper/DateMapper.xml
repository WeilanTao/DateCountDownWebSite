<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wlt.datecountdown.dao.DateDao">

    <select id="getDateListByAccount" resultType="com.wlt.datecountdown.entity.NewDate">
        SELECT
        <include refid="fixedDateColumns"></include>
        FROM dates d
--         WHERE 1=1
        <where>
            d.del_flag=0
        </where>

    </select>



    <insert id="insert" parameterType="com.wlt.datecountdown.entity.NewDate">
        INSERT INTO dates(
        date_id,
        date_name,
        account,
        create_date,
        now_date,
        )values (
        #{dateId},
        #{dateName},
        #{account},
        #{createDate},
        now()
        )
    </insert>

    <!--<update id=""></update>-->

    <!--<delete id=""></delete>-->

    <sql id="fixedDateColumns">
      d.date_id,
      d.date_name,
      d.account,
      d.created_date,
      d.now_date,
      d.del_flag

    </sql>

</mapper>

